<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:id="@+id/bannerJuego"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/bannerdados"
        android:contentDescription="@string/dados" />

    <ImageView
        android:id="@+id/imageJuego"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_dados"
        android:contentDescription="@string/dados" />

    <Button
        android:id="@+id/btnJugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jugar"
        android:layout_marginTop="40dp"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnVerTop15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/top_15"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/salir"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:textColor="#000000"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_gravity="center" />
</LinearLayout>
