<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/containerJugadores">

        <ImageView
            android:id="@+id/bannerJuego"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/bannerdados"
            android:contentDescription="@string/dados" />

        <ImageView
            android:id="@+id/imageJuego"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_dados"
            android:contentDescription="@string/dados" />

        <!-- El botÃ³n para terminar el juego al final -->
        <Button
            android:id="@+id/btnTerminarJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terminar Juego"
            tools:ignore="HardcodedText,VisualLintButtonSize"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_button"
            android:textColor="#000000"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>